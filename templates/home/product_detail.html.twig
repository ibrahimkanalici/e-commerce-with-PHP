{% extends 'frontbase.html.twig' %}

{% block title %}  {{ data[0].title }} {% endblock %}
{% block keywords %} {{ data[0].keywords }} {% endblock %}
{% block description %} {{ data[0].description }} {% endblock %}
{% block body %}


    <div class="product-tab1">
        <div class="col-md-4 product-tab1-grid">
            <div class="grid-arr">
                <div class="grid-arrival">
                    <figure>
                        <a href="#" class="new-gri" data-toggle="modal" data-target="#myModal1">
                            <div class="grid-img">
                                <img src="{{ asset('uploads') }}/images/{{ data[0].image }}" alt="">
                            </div>
                            {% for rs in images %}

                                <div class="grid-img">
                                    <img class="d-block w-100" src="{{ asset('uploads') }}/images/{{ rs.image }}">
                                </div>
                            {% endfor %}
                        </a>
                    </figure>
                </div>
            </div>
        </div>
        <div class="col-md-8 product-tab1-grid1 simpleCart_shelfItem">

            <div class="Ürün Detay">
                <h3>{{ data[0].title }}</h3>
                <p>{{ data[0].description }} </p>
                <p><em class="item_price">{{ data[0].sprice }}</em><b>TL</b></p>
                <form name="shopcart" class="form-horizontal qtyFrm" action="{{ path('shopcart_new') }}" method="post">
                    <div class="control-group">
                        <label class="control-label"><span>Alacağınız Adet:</span></label>
                        <input type="number" name="shopcart[quantity]" class="span6" value="1" placeholder="Qty" max="{{ data[0].amount }}">
                        <input type="hidden" name="shopcart[productid]" value="{{ data[0].id }}">
                    </div>
                    <h4>{{ data[0].amount }} Adet stokta var</h4><br>
                    <h4>{{ data[0].detail | raw }}</h4>
                    <input type="hidden" name="token" value="{{ csrf_token('add-item') }}">
                    <button type="submit" data-text="Add To Cart" class="my-cart-b item_add">Sepete Ekle</button>

                </form>

            </div>
        </div>
        <div class="clearfix"></div>
    </div>


{% endblock %}

