                <li><a href="{{ asset('admin') }}/charts.html"><i class="fa fa-envelope"></i><span>Mesajlar</span></a></li>
                <li><a href="{{ path('admin_setting_index') }}"><i class="fa fa-pie-chart"></i><span>Ayarlar</span></a></li>

            </ul>
        </section>
    </aside>
