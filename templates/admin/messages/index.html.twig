{% extends 'adminbase.html.twig' %}

{% block title %}Mesaj Listesi{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <div class="page-title">
            <div>
                <h1>
                    Mesaj Listesi

                </h1>

            </div>
            <div>
                <ul class="breadcrumb">
                    <li><i class="fa fa-home fa-lg"></i></li>
                    <li><a href="#">Mesaj Listesi</a></li>
                </ul>
            </div>
        </div>
        <div class="card">
            <h3 class="card-title">Mesaj Tablosu</h3>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Comment</th>
                    <th>Status</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for message in messages %}
                    <tr>
                        <td>{{ message.id }}</td>
                        <td>{{ message.name }}</td>
                        <td>{{ message.email }}</td>
                        <td>{{ message.subject }}</td>
                        <td>{{ message.message }}</td>
                        <td>{{ message.comment }}</td>
                        <td>{{ message.status }}</td>
                        <td>
                            <a href="javascript:openWin('{{ path('admin_messages_show', {'id': message.id}) }}','','toolbar-no,location-no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=700,height=600');">
                                Mesaj Oku</a>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('admin_messages_new') }}">Create new</a>
    </div>
{% endblock %}
