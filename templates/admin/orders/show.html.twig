{% extends 'adminbase.html.twig' %}

{% block title %}Sipariş Detayı{% endblock %}

{% block content %}
<div class="content-wrapper">
    <div class="page-title">
        <div>
            <h1>
                Sipariş Detayı
                <small><a class="btn btn-warning" href="{{ path('admin_user_new') }}">Sipariş Ekleme</a></small>
            </h1>

        </div>
        <div>
            <ul class="breadcrumb">
                <li><i class="fa fa-home fa-lg"></i></li>
                <li><a href="#">Blank Page</a></li>
            </ul>
        </div>
    </div>
    <div class="card">
        <h3 class="card-title">Sipariş Tablosu</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
        {% set total=0 %}
        {% for rs in orderdetail %}
        <tr>
            <td>{{ rs.id }}</td>
            <td>{{ rs.name }}</td>
            <td>{{ rs.price }}</td>
            <td>{{ rs.quantity }}</td>
            <td>{{ rs.amount }}</td>
            <td>{{ rs.status }}</td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5">Order Detail</td>
        </tr>
        {% endfor %}
        <tr>
            <td colspan="5"> <b>Toplam Alışveriş Tutarı : {{ order.amount }} TL </b></td>
        </tr>
    </table>

    <a href="{{ path('orders_index') }}">back to list</a>

    <a href="{{ path('orders_edit', {'id': order.id}) }}">edit</a>

    {{ include('orders/_delete_form.html.twig') }}
{% endblock %}
