{% extends 'adminbase.html.twig' %}

{% block title %}Kategori Detayı{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <div class="page-title">
            <div>
                <h1>
                    Kategori Detayı
                    <small><a class="btn btn-warning" href="{{ path('admin_user_new') }}">Kategori Ekleme</a></small>
                </h1>

            </div>
            <div>
                <ul class="breadcrumb">
                    <li><i class="fa fa-home fa-lg"></i></li>
                    <li><a href="#">Blank Page</a></li>
                </ul>
            </div>
        </div>
        <div class="card">
            <h3 class="card-title">Kategori Tablosu</h3>
            <table class="table">
                <thead>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Parentid</th>
                    <td>{{ category.parentid }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ category.title }}</td>
                </tr>
                <tr>
                    <th>Keywords</th>
                    <td>{{ category.keywords }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ category.description }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ category.status }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('admin_category_index') }}">Listeye geri dönmek için tıklayınız.</a>

            <br> <a href="{{ path('admin_category_edit', {'id': category.id, 'pid': category.parentid}) }}">Düzenlemek için tıklayınız.</a>

            {{ include('admin/category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
