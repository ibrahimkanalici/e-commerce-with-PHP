
<form class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label col-md-3">Üst Kategori</label>

        <div class="col-md-2">
            <select name="category[parentid]" class="form-control">

                {% if category.parentid!=0 %}
                    <option value="{{ category.parentid }}">{{ catname.title }}</option>
                {% else %}
                    <option value="0">Ana Kategori</option>
                {% endif %}
                    {%  for cat in catlist %}


                <option value="{{ cat.id }}">{{ cat.title }}</option>
                {% endfor %}

            </select>
        </div>


    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Title(Başlık)</label>
        <div class="col-md-5">
            <input type="text" class="form-control col-md-5" name="category[title]" value="{{ category.title }}" placeholder="Title">
        </div>
    </div>
    <div class="form-group">
        <label type="text" class="control-label col-md-3">Keywords(Anahtar Kelime)</label>
        <div class="col-md-5">
            <input type="text" class="form-control col-md-5" name="category[keywords]" value="{{ category.keywords }}" placeholder="Keywords">


        </div>
    </div>

    <div class="form-group">
        <label type="text" class="control-label col-md-3">Description(Kısa Açıklama)</label>
        <div class="col-md-5">
            <input type="text" class="form-control col-md-5" name="category[description]" value="{{ category.description }}" placeholder="Description">


        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-3">Aktif Durumu</label>
        <div class="col-md-1">
            <select name="category[status]" class="form-control">
                {{ category.status }}
                <option>True</option>
                <option selected>False</option>

            </select>
        </div>
    </div>





    </div>
    <div class="form-group">
        <div class="col-md-8 col-md-offset-3">
        </div>
    </div>
    <div class="card-footer">
        <div class="card-footer">
            <div class="row">
                <div class="col-md-8 col-md-offset-3">
                    <input  class="btn btn-default icon-btn" type="submit" value="KAYDET">

                </div>
            </div>
        </div>
    </div>
</form>
